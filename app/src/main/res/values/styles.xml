    <!-- Common button style -->
    <style name="common_button">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--        <item name="android:imeOptions">actionNext</item> -->

    <style name="StyledTilEditTextTheme">

        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/color_green</item>
        <item name="colorControlActivated">@color/colorRed</item>
        <item name="android:textColorPrimary">@color/color_green</item>
    </style>

    <style name="StyledTilEditText">
        <item name="android:theme">@style/StyledTilEditTextTheme</item>
        <item name="android:paddingTop">4dp</item>
    </style>


    <style name="LoaderTheme" parent="@android:style/Theme.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>
    <style name="NavigationDrawerStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:listPreferredItemHeightSmall">40dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
    <style name="MyPopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:dropDownHorizontalOffset">-4dp</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
    </style>
    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/colorTransluscentPrimaryLoaderBg</item>
        <item name="android:bottomDark">@color/colorTransluscentPrimaryLoaderBg</item>
        <item name="android:bottomMedium">@color/colorTransluscentPrimaryLoaderBg</item>
        <item name="android:centerBright">@color/colorTransluscentPrimaryLoaderBg</item>
        <item name="android:centerDark">@color/colorTransluscentPrimaryLoaderBg</item>
        <item name="android:centerMedium">@color/colorTransluscentPrimaryLoaderBg</item>
        <item name="android:fullBright">@color/colorTransluscentPrimaryLoaderBg</item>
        <item name="android:fullDark">@color/colorTransluscentPrimaryLoaderBg</item>
        <item name="android:topBright">@color/colorTransluscentPrimaryLoaderBg</item>
        <item name="android:topDark">@color/colorTransluscentPrimaryLoaderBg</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>



</resources>
