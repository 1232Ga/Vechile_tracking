<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activity.ChangePasswordActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:weightSum="1"
        android:background="@color/color_garudauav_blue_line"
        android:orientation="horizontal"
        android:layout_marginBottom="3dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_marginTop="2dp"
            android:onClick="back"
            android:layout_gravity="left|center"
            android:layout_weight=".1"
            android:src="@drawable/ic_arrow_back_24"
            android:layout_height="30dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_marginRight="20dp"
            android:layout_weight=".9"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:text="Change Password"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_regular"
                android:layout_height="wrap_content"/>

        </LinearLayout>




    </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_marginTop="24pt"
      android:layout_marginLeft="15pt"
      android:layout_marginRight="15pt"
      android:orientation="vertical"
      android:background="@drawable/vehicleownerback"
      android:layout_height="wrap_content">
      <com.google.android.material.textfield.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:hint="Current Password"
          android:textColor="@color/black"
          app:hintAnimationEnabled="true">

          <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/currenpaasword"
              android:layout_width="match_parent"
              android:layout_height="45dp"
              android:layout_marginRight="2dp"
              android:layout_marginBottom="5dp"
              android:imeOptions="actionNext"
              android:inputType="textEmailAddress"
              android:padding="5dp"
              android:background="@null"
              android:focusable="true"
              android:textColor="@color/black"
              android:singleLine="true"
              android:textSize="15dp" />
      </com.google.android.material.textfield.TextInputLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginTop="2pt"
          android:background="#17000000"/>
      <com.google.android.material.textfield.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:hint="New Password"
          android:textColor="@color/black"
          android:layout_marginTop="10dp"
          app:hintAnimationEnabled="true">

          <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/newpaasword"
              android:layout_width="match_parent"
              android:layout_height="45dp"
              android:layout_marginRight="2dp"
              android:layout_marginBottom="5dp"
              android:imeOptions="actionDone"
              android:inputType="textEmailAddress"
              android:padding="5dp"
              android:focusable="true"
              android:background="@null"
              android:textColor="@color/black"
              android:singleLine="true"
              android:textSize="15dp" />
      </com.google.android.material.textfield.TextInputLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_marginTop="2pt"
          android:background="#17000000"/>
      <com.google.android.material.textfield.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="15dp"
          android:layout_marginRight="15dp"
          android:hint="Confirm Password"
          android:textColor="@color/black"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="30dp"
          app:hintAnimationEnabled="true">

          <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/confirmpaasword"
              android:layout_width="match_parent"
              android:layout_height="45dp"
              android:layout_marginRight="2dp"
              android:layout_marginBottom="5dp"
              android:imeOptions="actionDone"
              android:inputType="textEmailAddress"
              android:padding="5dp"
              android:focusable="true"
             android:background="@null"
              android:textColor="@color/black"
              android:singleLine="true"
              android:textSize="15dp" />
      </com.google.android.material.textfield.TextInputLayout>

  </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:weightSum="1"
        android:gravity="center"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submit_btn"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/newbtncolor"
            android:fontFamily="serif"
            android:text="Update"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancelbtn"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/cancelbtnback"
            android:fontFamily="serif"
            android:text="Cancel"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>