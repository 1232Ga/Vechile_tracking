<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/hghghg"
    android:layout_marginLeft="9pt"
    android:layout_marginRight="9pt"
    android:layout_marginTop="4pt"
    android:layout_marginBottom="4pt"
    android:background="@drawable/vehicleownerlistback"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="end"
        android:padding="5dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/cancel_bottomsheet_item"
            android:backgroundTint="@color/black"
            android:src="@drawable/ic_baseline_clear_24"
            android:layout_alignParentRight="true" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="45pt"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:weightSum="3"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".6"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="55dp"
                        android:id="@+id/menuimage1"
                        android:layout_marginTop="18dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/dumyimgae"
                        android:layout_height="55dp"/>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:layout_height="match_parent"
                    android:layout_weight="2.3">
                    <TextView
                        android:id="@+id/vechilenumber"
                        android:layout_width="match_parent"
                        android:layout_marginRight="5dp"
                        android:gravity="center|left"
                        android:layout_marginLeft="10dp"
                        android:layout_height="0dp"
                        android:layout_weight=".3"
                        android:fontFamily="@font/poppins_regular"
                        android:singleLine="true"
                        android:text=""
                        android:textSize="17sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/cardate"
                        android:layout_width="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight=".3"
                        android:gravity="left"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_height="0dp"
                        android:maxLength="70"
                        android:singleLine="false"
                        android:text=""
                        android:textSize="14.5sp"
                        />
                    <TextView
                        android:id="@+id/lastupadet"
                        android:layout_width="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight=".3"
                        android:gravity="left"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_height="0dp"
                        android:maxLength="70"
                        android:singleLine="false"
                        android:text=""
                        android:textSize="14.5sp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_marginBottom="4dp"
                    android:gravity="center"
                    android:weightSum="1"
                    android:visibility="gone"
                    android:id="@+id/viewdetails"
                    android:layout_height="match_parent"
                    android:layout_weight=".5">

                    <ImageView
                        android:id="@+id/delete_item"
                        android:layout_width="0dp"
                        android:layout_marginLeft="5dp"
                        android:layout_height="6pt"
                        android:layout_weight=".5"
                        android:src="@drawable/foerbadback"
                        />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".9"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Distance"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:textColor="#6bcefb"
                android:textSize="15dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="60 km"
                android:id="@+id/sourcecar"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:textSize="15dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Avg Speed"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#6bcefb"
                android:textSize="15dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10 km/h"
                android:id="@+id/destinationcar"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:textSize="15dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".9"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Distance left"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#6bcefb"
                android:textSize="14dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
              android:text="20 km"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>

