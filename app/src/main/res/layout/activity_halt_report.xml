<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.HaltReportActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:weightSum="1"
            android:background="@color/color_garudauav_blue_line"
            android:orientation="horizontal"
            android:layout_marginBottom="3dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_marginTop="2dp"
                android:onClick="back"
                android:layout_gravity="left|center"
                android:layout_weight=".1"
                android:src="@drawable/ic_arrow_back_24"
                android:layout_height="30dp"/>
            <LinearLayout
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight=".7"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Halt Vehicle Reports"
                    android:textSize="16dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight=".2"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="30dp"
                    android:id="@+id/printpdf"
                    android:src="@drawable/pdf"
                    android:layout_height="30dp"/>

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:gravity="center"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="From Date"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textSize="12pt"
                    android:padding="5dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/allvechicactivityback"
                    android:id="@+id/fromdatevlue"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="5dp"
                    android:visibility="visible"
                    android:hint="Choose Date"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="To Date"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textSize="12pt"
                    android:padding="5dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/allvechicactivityback"
                    android:id="@+id/todatevlue"
                    android:hint="Choose Date"
                    android:layout_marginLeft="5dp"
                    android:paddingRight="5dp"
                    android:visibility="visible"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <Spinner
                    android:id="@+id/packagelistspin"
                    android:layout_width="70pt"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/spineeredit"
                    android:gravity="center"
                    android:overScrollMode="never"
                    android:paddingLeft="20dp"
                    android:paddingEnd="20dp"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Search Report"
                    android:padding="4dp"
                    android:textSize="13dp"
                    android:id="@+id/searchreport"
                    android:textColor="@color/white"
                    android:background="@drawable/transparent"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/linear"
            android:background="@color/white"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="5pt"
                android:gravity="center"
                android:id="@+id/Reoprtheadingname"
                android:text=""
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="9pt" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20pt"
                android:layout_weight="1"
                android:weightSum="5"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:paddingLeft="2pt"
                    android:textSize="6pt"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="UniqueId"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:paddingLeft="2pt"
                    android:textSize="6pt"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="Date"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".8"
                    android:paddingLeft="2pt"
                    android:textSize="5pt"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="Distance"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".8"
                    android:paddingLeft="2pt"
                    android:textSize="5pt"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="Avg.\nSpeed"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".8"
                    android:paddingLeft="2pt"
                    android:textSize="5pt"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="Max.\nSpeed"/>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#22000000"
                android:visibility="visible" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/rolesrecycleview"
            android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>
        <TextView
            android:layout_width="match_parent"
            android:textSize="18dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAllCaps="true"
            android:visibility="gone"
            android:text="No Data Found"
            android:id="@+id/textdefaultactivity"
            android:layout_height="100dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>